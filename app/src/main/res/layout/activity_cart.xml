<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:elevation="0dp"
        app:titleTextColor="#000000"
        android:background="#14e48c"
        />

    <TextView
        android:id="@+id/txtOrderingFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Ordering"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:textColor="#000000"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        />
    <TextView
        android:id="@+id/txtResName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txtOrderingFrom"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        android:text="Bacco Tell"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="18sp"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtOrderingFrom"
        android:background="#989595"
        android:layout_marginTop="15dp"
        android:backgroundTint="#000000"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_margin="10dp"
        android:layout_above="@+id/btnPlaceOrder"
        />

    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#14e48c"
        android:textColor="#000000"
        android:textAllCaps="false"
        />


</RelativeLayout>