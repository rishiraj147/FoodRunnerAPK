        <TextView
            android:id="@+id/txtFAQ3Ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFAQ3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:text="@string/FAQ3Ans"
            android:textSize="18sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtFAQ3Ans"
            android:background="#AD9E9E"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/txtFAQ4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FAQ4"
            android:textStyle="bold"
            android:textColor="#1C742B"
            android:textSize="18sp"
            android:layout_below="@+id/view3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            />

        <TextView
            android:id="@+id/txtFAQ4Ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
